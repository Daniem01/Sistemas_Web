<form action="/cartas/modificarCard" method="POST">
  <fieldset>
    <% if (locals.mensaje) { %>
      <p><strong><%= locals.mensaje %></strong></p>
    <% } %>
    <legend>Modificar carta</legend>
    
    <div>
      <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" required>
    </div>
    
    <div>
      <label for="nombre">Nuevo Nombre:</label>
      <input type="text" id="nombre2" name="nombre2" required>
    </div>

    <div>
      <label>
        <input type="radio" name="rareza" value="1"> Común
      </label>
      <label>
        <input type="radio" name="rareza" value="2"> Rara
      </label>
      <label>
        <input type="radio" name="rareza" value="3"> Épica
      </label>
      <label>
        <input type="radio" name="rareza" value="4"> Legendaria
      </label>
    </div>

    <div>
      <label for="vida">Vida:</label>
      <input type="number" id="vida" name="vida" required min="1" max="300">
    </div>
    
    <div>
      <button type="submit">Modificar Carta</button>
    </div>
  </fieldset>
</form>
