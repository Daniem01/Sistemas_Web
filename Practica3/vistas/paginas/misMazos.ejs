<table border="1">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cartas</th>
        </tr>
    </thead>
    <tbody>
        <% if (mazos.length > 0) { %>
            <% mazos.forEach(mazo => { %>
                <tr>
                    <td><%= mazo.nombre %></td>
                    <td><%= mazo.cartas %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="2">No hay mazos disponibles</td>
            </tr>
        <% } %>
    </tbody>
</table>
